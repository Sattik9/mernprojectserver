<!DOCTYPE html>
<html lang="en">

<%- include('common/head.ejs')%>

<body>

  <!-- ======= Header ======= -->
  <%- include('common/header.ejs')%>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <%- include('common/sidebar.ejs')%>
  <!-- End Sidebar-->
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Update Blog Data</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item">Destination</li>
          <li class="breadcrumb-item active">Add</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-6">
          <%=message%>
          <div class="card" >
            <div class="card-body">
              <h5 class="card-title">Update Data</h5>
               
              <!-- Horizontal Form -->
              <form action="/admin/blogupdate" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-3 col-form-label">Title</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control"  name="title" value="<%=blogs.title%>" >
                  </div>
                </div>
                <div class="row mb-3">
                  
                  <div class="col-sm-9">
                    <input type="hidden" class="form-control"  name="blog_id" value="<%=blogs._id%>" >
                  </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Subtitle</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control"  name="subtitle" value="<%=blogs.subtitle%>">
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-3 col-form-label">Content</label>
                    <div class="col-sm-9">
                      <!-- <input type="text" class="form-control"  name="content" required> -->
                      <textarea  class="form-control" name="content" rows="4"  cols="50" >
                        <%=blogs.content%>
                      </textarea>
                    </div>
                  </div>
                  <div class="row mb-3">
                    
                    <div class="col-sm-9">
                      <input type="hidden" class="form-control"  name="author" value="<%=data._id%>" >
                    </div>
                  </div>
                 
                  

                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-3 col-form-label">Image</label>
                  <div class="col-sm-9">
                    <input type="file" class="form-control" style="color:red;"  name="image" accept="image/png, image/jpeg,image/jpg" >
                  </div>
                  <img src="/<%=blogs.image%>">
                </div>

                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form><!-- End Horizontal Form -->

            </div>
          </div>

          

        </div>

       
      </div>
    </section>

  </main>




  <!-- ======= Footer ======= -->
  <%- include('common/footer.ejs')%>
